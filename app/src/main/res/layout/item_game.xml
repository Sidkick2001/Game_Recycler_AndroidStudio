<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- Иконка игры -->
    <ImageView
        android:id="@+id/gameIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_launcher_foreground"
        android:contentDescription="Иконка игры"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Название игры -->
    <TextView
        android:id="@+id/gameText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Название игры"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/gameIcon"
        app:layout_constraintTop_toTopOf="@id/gameIcon"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Прогресс-бар -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_marginTop="6dp"
        android:progress="0"
        android:max="100"
        android:progressTint="#4CAF50"
        android:progressBackgroundTint="#D6D6D6"
        app:layout_constraintStart_toStartOf="@id/gameText"
        app:layout_constraintTop_toBottomOf="@id/gameText"
        app:layout_constraintEnd_toEndOf="@id/gameText" />

    <!-- Текст процента -->
    <TextView
        android:id="@+id/progressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="0%"
        android:textColor="#666666"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/progressBar"
        app:layout_constraintStart_toStartOf="@id/progressBar" />

</androidx.constraintlayout.widget.ConstraintLayout>
